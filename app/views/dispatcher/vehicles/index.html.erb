<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Lista pojazdów</h2>
    <%= link_to "Dodaj nowy pojazd", new_dispatcher_vehicle_path, class: "btn btn-outline-secondary rounded-pill px-4 py-2 shadow-sm me-2" %>
  </div>

  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover mb-0">
      <thead class="table-dark">
        <tr>
          <th>Marka</th>
          <th>Numer rejestracyjny</th>
          <th>Typ pojazdu</th>
          <th>Wymagana kategoria prawa jazdy</th>
          <th>Status</th>
          <th>Akcje</th>
        </tr>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr class="align-middle">
            <td><%= vehicle.brand %></td>
            <td><%= vehicle.registration_number %></td>
            <td><%= vehicle.vehicle_type&.name %></td>
            <td><%= vehicle.required_license %></td>
            <td>
              <% status_class = case vehicle.status
                when "available" then "bg-success text-white"
                when "busy" then "bg-warning text-dark"
                when "off_duty" then "bg-secondary text-white"
                else "bg-secondary text-white"
              end %>
              <span class="badge <%= status_class %> rounded-pill px-3 py-1">
                <%= I18n.t("activerecord.attributes.vehicle.statuses.#{vehicle.status}") %>
              </span>
            </td>
            <td>
              <%= link_to "Szczegóły", dispatcher_vehicle_path(vehicle), class: "btn btn-sm btn-outline-secondary me-1 mb-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
