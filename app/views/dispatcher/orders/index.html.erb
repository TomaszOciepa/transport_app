<div class="container-fluid">
  <h2 class="fw-bold mb-4">Lista zamówień</h2>

  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover mb-0">
      <thead class="table-dark">
        <tr>
          <th><%= sortable "order_number", "Nr zamówienia" %></th>
          <th><%= sortable "status", "Status" %></th>
          <th><%= sortable "pickup_date", "Data załadunku" %></th>
          <th><%= sortable "delivery_date", "Data dostawy" %></th>
          <th><%= sortable "service_type_id", "Usługa" %></th>
          <th><%= sortable "vehicle_type_id", "Typ pojazdu" %></th>
          <th>Akcje</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr class="align-middle">
            <td class="fw-bold"><%= order.order_number %></td>
            <td>
              <% status_class = case order.status
                 when "pending" then "bg-warning text-dark"
                 when "scheduled" then "bg-info text-dark"
                 when "in_transit" then "bg-primary text-white"
                 when "completed" then "bg-success text-white"
                 when "canceled" then "bg-danger text-white"
                 else "bg-secondary text-white"
              end %>
              <span class="badge <%= status_class %> rounded-pill px-3 py-1"><%= order.status_name %></span>
            </td>
            <td><%= l(order.pickup_date, format: :short) if order.pickup_date %></td>
            <td><%= l(order.delivery_date, format: :short) if order.delivery_date %></td>
            <td><%= order.service_type.name %></td>
            <td><%= order.vehicle_type.name %></td>
            <td>
              <%= link_to "Szczegóły", dispatcher_order_path(order), class: "btn btn-sm btn-outline-secondary me-1 mb-1" %>
              <%= link_to "Usuń", dispatcher_order_path(order),
                          data: { turbo_method: :delete, turbo_confirm: "Czy na pewno chcesz usunąć to zamówienie?" },
                          class: "btn btn-sm btn-outline-danger mb-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
