<div class="container my-4">
  <h2 class="fw-bold mb-4">Edytuj kierowcę <span class="text-primary"><%= @driver.first_name %> <%= @driver.last_name %></span></h2>

  <%= form_with model: @driver, url: dispatcher_driver_path(@driver), method: :patch, local: true do |f| %>
    <div class="card shadow-sm rounded-4 p-4 position-relative">
      <small class="text-muted position-absolute top-0 end-0 m-3">
        Utworzono: <%= l(@driver.created_at, format: :long) %>
      </small>

      <h5 class="mb-3 border-bottom pb-2"><i class="bi bi-person-circle me-2"></i>Dane kierowcy</h5>

      <div class="row mb-3">
        <div class="col-md-6 mb-2">
          <%= f.label :first_name, "Imię", class: "form-label fw-bold" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :last_name, "Nazwisko", class: "form-label fw-bold" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :email, "Email", class: "form-label fw-bold" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :phone, "Telefon", class: "form-label fw-bold" %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :license_category, "Kategoria prawa jazdy", class: "form-label fw-bold" %>
          <%= f.text_field :license_category, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :birth_year, "Rok urodzenia", class: "form-label fw-bold" %>
          <%= f.number_field :birth_year, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :available_from, "Dostępny od", class: "form-label fw-bold" %>
          <%= f.time_field :available_from, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :available_to, "Dostępny do", class: "form-label fw-bold" %>
          <%= f.time_field :available_to, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-2">
          <%= f.label :status, "Status", class: "form-label fw-bold" %>
          <%= f.select :status,
              [
                ["Dostępny", "available"],
                ["Zajęty", "busy"],
                ["Nieobecny", "off_duty"]
              ],
              {}, 
              class: "form-select"
          %>
        </div>
      </div>
    </div>

    <div class="mt-3 d-flex justify-content-start">
      <%= f.submit "Zapisz zmiany", class: "btn btn-dark rounded-pill px-4 py-2 shadow-sm me-2" %>
      <%= link_to "Anuluj", dispatcher_driver_path(@driver), class: "btn btn-outline-secondary rounded-pill px-4 py-2 shadow-sm" %>
    </div>
  <% end %>
</div>
