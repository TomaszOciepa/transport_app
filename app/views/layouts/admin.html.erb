<!DOCTYPE html>
<html>
  <head>
    <title>Panel Admina - TransportApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div class="d-flex">

      <!-- Sidebar -->
      <nav class="bg-dark text-white vh-100 p-3" style="width: 250px;">
        <!-- Link do strony głównej -->
        <div class="mb-4 text-center">
          <%= link_to root_path, class: "text-white text-decoration-none d-inline-block mb-3" do %>
            <i class="bi bi-house-door-fill fs-3"></i>
          <% end %>
          <div class="text-muted small">Powrót do aplikacji</div>
        </div>

        <!-- Logo panelu admina -->
        <div class="mb-4">
          <a href="<%= admin_root_path %>" class="text-white text-decoration-none">
            <h4 class="m-0">Admin</h4>
            <small class="text-muted">TransportApp</small>
          </a>
        </div>

        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <%= link_to admin_root_path, class: "nav-link text-white #{'fw-bold' if current_page?(admin_root_path)}" do %>
              <i class="bi bi-speedometer2 me-2"></i> Dashboard
            <% end %>
          </li>

          <li class="nav-item mb-2">
            <%= link_to admin_users_path, class: "nav-link text-white #{'fw-bold' if current_page?(admin_users_path)}" do %>
              <i class="bi bi-people-fill me-2"></i> Użytkownicy
            <% end %>
          </li>

          <li class="nav-item mb-2">
            <%= link_to admin_settings_path, class: "nav-link text-white #{'fw-bold' if current_page?(admin_settings_path)}" do %>
              <i class="bi bi-gear-fill me-2"></i> Ustawienia
            <% end %>
          </li>

          <li class="nav-item mb-2">
            <%= link_to admin_reports_path, class: "nav-link text-white #{'fw-bold' if current_page?(admin_reports_path)}" do %>
              <i class="bi bi-bar-chart-fill me-2"></i> Raporty
            <% end %>
          </li>

          <li class="mt-4">
            <%= link_to destroy_user_session_path,
                        data: { turbo_method: :delete },
                        class: "btn btn-outline-light w-100" do %>
              <i class="bi bi-box-arrow-right me-2"></i> Wyloguj
            <% end %>
          </li>
        </ul>
      </nav>

      <!-- Content -->
      <main class="flex-grow-1 p-4">

        <!-- Flash messages -->
        <% flash.each do |type, message| %>
          <% bootstrap_class = case type
               when "notice" then "alert-success"
               when "alert" then "alert-danger"
               else "alert-info"
             end %>
          <div class="alert <%= bootstrap_class %> alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </body>
</html>
