<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white text-center">
          <h4>Nowe zamówienie transportowe</h4>
        </div>
        <div class="card-body p-4">
          <%= form_with(model: @order, url: preview_orders_path, local: true, class: "needs-validation") do |f| %>
            
            <div class="mb-3">
              <%= f.label :pickup_address, "Skąd (adres)", class: "form-label fw-bold" %>
              <%= f.text_field :pickup_address, class: "form-control", placeholder: "np. Warszawa, ul. Marszałkowska 1", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :delivery_address, "Dokąd (adres)", class: "form-label fw-bold" %>
              <%= f.text_field :delivery_address, class: "form-control", placeholder: "np. Kraków, ul. Długa 10", required: true %>
            </div>

          <div class="mb-3">
            <%= f.label :pickup_date, "Data i godzina odbioru", class: "form-label fw-bold" %>
            <%= f.datetime_local_field :pickup_date, class: "form-control", required: true %>
          </div>


            <div class="mb-3">
              <%= f.label :vehicle_type_id, "Typ pojazdu", class: "form-label fw-bold" %>
              <%= f.collection_select :vehicle_type_id, @vehicle_types, :id, :name, {}, class: "form-select", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :service_type_id, "Typ usługi", class: "form-label fw-bold" %>
              <%= f.collection_select :service_type_id, @service_types, :id, :name, {}, class: "form-select", required: true %>
            </div>

            <div class="text-center">
              <%= f.submit "Oblicz koszty", class: "btn btn-lg btn-primary px-5 rounded-pill shadow-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
