<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
          <h2 class="mb-4 fw-bold text-center">Edytuj konto</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label fw-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Twój email", required: true %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="mb-3 text-warning">
                Aktualnie oczekuje na potwierdzenie: <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, "Nowe hasło", class: "form-label fw-bold" %>
              <small class="text-muted">(pozostaw puste, jeśli nie chcesz zmieniać hasła)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Nowe hasło" %>
              <% if @minimum_password_length %>
                <small class="text-muted d-block"><%= @minimum_password_length %> znaków minimum</small>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Potwierdź nowe hasło", class: "form-label fw-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Potwierdź hasło" %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, "Aktualne hasło", class: "form-label fw-bold" %>
              <small class="text-muted">(wymagane do potwierdzenia zmian)</small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Aktualne hasło", required: true %>
            </div>

            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "Zaktualizuj konto", class: "btn btn-dark rounded-pill px-5 py-2 shadow-sm" %>
            </div>
          <% end %>

          <hr class="my-4">

          <h3 class="fw-bold text-center mb-3">Usuń konto</h3>
          <div class="text-center">
            <%= button_to "Usuń moje konto", registration_path(resource_name), 
                          data: { confirm: "Czy na pewno chcesz usunąć konto?", turbo_confirm: "Czy na pewno chcesz usunąć konto?" }, 
                          method: :delete, 
                          class: "btn btn-outline-danger rounded-pill px-4 py-2 shadow-sm" %>
          </div>

          <div class="text-center mt-3">
            <%= link_to "Wróć", :back, class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
