<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
          <h2 class="mb-4 fw-bold text-center">Logowanie</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label fw-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Twój email", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Hasło", class: "form-label fw-bold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Hasło", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Zapamiętaj mnie", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "Zaloguj", class: "btn btn-dark rounded-pill px-5 py-2 shadow-sm" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
