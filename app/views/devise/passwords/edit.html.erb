<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
          <h2 class="mb-4 fw-bold text-center">Zmień hasło</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, "Nowe hasło", class: "form-label fw-bold" %>
              <% if @minimum_password_length %>
                <small class="text-muted">(<%= @minimum_password_length %> znaków minimum)</small>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Nowe hasło", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Potwierdź nowe hasło", class: "form-label fw-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Potwierdź hasło", required: true %>
            </div>

            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "Zmień hasło", class: "btn btn-dark rounded-pill px-5 py-2 shadow-sm" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
